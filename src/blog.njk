title: blog
layout: 'base.njk' 
---

       
<div class="section container">
<h1 class="section-title">Recent adles</h1>
<ul role="list" class="articles__list flow">
{%- for post in collections.post | reverse -%}
  <li>
  <article class="snippet">
  <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}" class="snippet_image">
  <h3 class="snippet__title"><a href="{{post.url}}">{{ post.data.title }}</a></h3>
  <p class="snippet__body"><span>{{ post.data.description }}</span></p>
  <p class="snippet__meta">{{ post.data.author }}</p>
  <a href="{{ post.url }}" class="btn btn--primary"> Continue Reading</a>
  </article>
  </li>
{%- endfor %}

</ul>
  </div>